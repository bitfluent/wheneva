<h1>New <%= resource %></h1>

<%% semantic_form_for(@<%= resource %>) do |form| %>
<% if active_record_defined? -%>
  <%% form.inputs do %>
<% columns_for_form.each do |attribute_name, attribute_type| -%>
    <%%= form.input :<%= attribute_name %> %>
<% end -%>
  <%% end %>
<% else -%>
  <%%= form.inputs %>
<% end -%>
  <%% form.buttons do %>
    <%%= form.commit_button 'Create',
          :button_html => { :disable_with => 'Please wait...' } %>
  <%% end %>
<%% end %>
